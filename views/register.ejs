<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head') %>
  <title>Make.u | Registro</title>
  <link rel="stylesheet" href="/css/register.css" />
</head>

<body>
  <%- include('partials/header') %>

  <main class="container">
    <div class="row position">
      <div class="row form-1 col-12 col-md-6 col-lg-6">
        <!--action="/users/login" method="POST"-->
        <form class="container" action="/users/login" method="POST">
          <h1>Iniciar sesión</h1>
          <nav>
            <div class="connect-1">
              <i class="fab fa-facebook-f"></i>
              <a href="https://en-gb.facebook.com/login/ ">Continuar con Facebook</a>
            </div>
            <div class="connect-2">
              <i class="fab fa-twitter"></i>
              <a href="https://twitter.com/login?lang=es ">Continuar con Twitter</a>
            </div>
          </nav>

          <label for="loginEmail">Direccion de correo electronico</label>
          <input type="email" class="form-control" name="loginEmail" id="loginEmail" aria-describedby="emailHelp" />

          <label for="loginPassword">Contraseña</label>
          <input type="password" class="form-control" id="loginPassword" name="loginPassword" />

          <p class="password-p mb-0">¿Olvido su contraseña?</p>
          <input type="checkbox" name="remember" id="remember">
          <label for="remember" class="mt-0">Recordarme</label>

          <button class="btn btn-pink btn-block" type="submit ">
            Ingresar
          </button>
        </form>
      </div>
      <div class="row form-2 col-12 col-md-6 col-lg-6">
        <form class="container" action="/users/register" method="POST" enctype="multipart/form-data">
          <h1>Registrarse</h1>
          <div class="custom-file">
            <input type="file" class="custom-file-input" id="avatar" name="avatar" lang="es" />
            <label class="custom-file-label" for="avatar">Subi tu foto de perfil</label>
          </div>
          <label class="nombre" for="nombre">Nombre</label>
          <input class="form-control" type="text" id="name" name="name" required />

          <label for="apellido ">Apellido</label>
          <input class="form-control" type="text" id="lastName" name="lastName" required />

          <label for="email">Direccion de correo electronico</label>
          <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" />

          <label for="password">Contraseña</label>
          <input type="password" class="form-control" id="password" name="password" />

          <button class="btn btn-pink btn-block" type="submit">
            Registrarse
          </button>
        </form>
      </div>
    </div>
  </main>
  <%- include("partials/footer") %>
</body>

</html>