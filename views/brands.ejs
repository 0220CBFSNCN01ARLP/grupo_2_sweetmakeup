<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head") %>
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;0,700;0,900;1,400;1,500;1,700;1,900&display=swap"
        rel="stylesheet">

    <link rel="stylesheet" href="/css/brands.css" />
    <script defer src="/js/addToCart.js"></script>
    <title>Make.u |
        Marcas
    </title>
</head>

<body>
    <%- include('partials/header') %>

    <div class="brand-banner-title">
        <img src="/img/bannerBrand2.jpg" alt="Banner principal" class=" banner-img w-100 " />
        <h1 class="upper-title-section">MARCAS</h1>
    </div>

    <main class="container pd-container">
        <!-- Modal -->
        <div class="modal" id="addToCartOk" tabindex="-1" role="dialog" aria-labelledby="addToCartOk"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        El producto fue agregado a tu carrito!
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-pink" data-dismiss="modal">OK</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Modal -->


        <div class="row d-flex justify-content-center">
            <% for (let brand of brands) { %>
            <div class="card col-3 card-brand" style="width: 18rem;">
                <a href="/brands/<%= brand.id %> ">
                    <img src="/img/bannerBrand3.jpg" class="card-img-top img-card-brand" alt="...">
                    <div class="card-body">
                        <h5 class="card-title text-center"><%= brand.name %></h5>
                    </div>
                </a>
            </div>
            <% } %>
        </div>

    </main>
    <%- include("partials/footer") %>
</body>

</html>