<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
    <title>Make.u | Registro</title>
    <link rel="stylesheet" href="/css/register.css" />
    <script defer src="/js/userValidator.js"></script>
</head>

<body>
    <%- include('partials/header') %>

    <main class="container">
        <div class="row position">
            <div class="container row form-1 col-12 col-md-6 col-lg-6">
                <!--action="/users/login" method="POST"-->
                <form id="contact-form-login" class="container" action="/users/login" method="POST">
                    <h1>Iniciar sesi칩n</h1>
                    <nav>
                        <div class="connect-1 buttonMargin">
                            <i class="fab fa-facebook-f"></i>
                            <a href="https://en-gb.facebook.com/login/ ">Continuar con Facebook</a>
                        </div>
                        <div class="connect-2 buttonMargin">
                            <i class="fab fa-twitter"></i>
                            <a href="https://twitter.com/login?lang=es ">Continuar con Twitter</a>
                        </div>
                    </nav>

                    <label for="loginEmail">Direccion de correo electronico</label>
                    <input type="email" class="form-control" name="loginEmail" id="loginEmail"
                        aria-describedby="emailHelp" />
                    <div class="loginEmail invalid-feedback"></div>

                    <label for="loginPassword">Contrase침a</label>
                    <input type="password" class="form-control" id="loginPassword" name="loginPassword" />
                    <div class="loginPassword invalid-feedback"></div>

                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="remember" name="remember"
                            value="remember" />
                        <label class="custom-control-label" for="remember">Recordarme</label>
                    </div>

                    <button class="btn btn-pink btn-block buttonMargin" type="submit ">
                        Ingresar
                    </button>
                </form>
            </div>

            <div class="row form-2 col-12 col-md-6 col-lg-6" id="container">
                <% if( typeof errors != 'undefined') { %>
                <p class="errors">Error</p>
                <ul>
                    <% for (let i=0; i<errors.length; i++) {%>
                    <li>
                        <%= errors[i].msg %>
                    </li>
                    <% } %>
                </ul>
                <% } %>
                <form id="contact-form" class="container" action="/users/register" method="POST"
                    enctype="multipart/form-data">
                    <h1>Registrarse</h1>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="avatar" name="avatar" lang="es" />
                        <label class="custom-file-label" for="avatar">Subi tu foto de perfil</label>
                        <div class="avatar invalid-feedback"></div>
                    </div>
                    <label for="firstName">Nombre</label>
                    <input class="form-control" type="text" id="firstName" name="firstName" />
                    <div class="firstName invalid-feedback"></div>

                    <label for="lastName">Apellido</label>
                    <input class="form-control" type="text" id="lastName" name="lastName" />
                    <div class="lastName invalid-feedback"></div>

                    <label for="email">Direccion de correo electronico</label>
                    <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" />
                    <div class="email invalid-feedback"></div>

                    <label for="password">Contrase침a</label>
                    <input type="password" class="form-control" id="password" name="password" />
                    <div class="password invalid-feedback"></div>

                    <label for="rePassword">Confirmar Contrase침a</label>
                    <input type="password" class="form-control" id="rePassword" name="rePassword" />
                    <div class="rePassword invalid-feedback"></div>

                    <button class="btn btn-pink btn-block" type="submit">
                        Registrarse
                    </button>
                </form>
            </div>
        </div>
    </main>
    <%- include("partials/footer") %>
</body>

</html>